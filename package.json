{
    "name": "@paytheory/payments",
    "version": "0.2.41-0",
    "description": "React components and hooks for pay theory payments",
    "author": "aron23",
    "license": "MIT",
    "repository": "pay-theory/payments",
    "main": "dist/index.js",
    "module": "dist/index.modern.js",
    "source": "src/index.js",
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "build": "microbundle-crl --no-compress --format modern,cjs",
        "start": "microbundle-crl watch --no-compress --format modern,cjs",
        "prepublish": "run-s build",
        "publish-dev-npm": "npm run build && npm version prepatch && git push && npm publish --tag alpha",
        "publish-stage-npm": "npm run build && npm version prepatch && git push && npm publish --tag beta",
        "publish-prod-npm": "npm run build && npm version prepatch && git push && npm publish",
        "test": "run-s test:unit test:lint test:build",
        "test:build": "run-s build",
        "test:lint": "eslint .",
        "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
        "test:watch": "react-scripts test --env=jsdom",
        "predeploy": "cd example && npm install && npm run build",
        "deploy-site": "gh-pages -d example/build"
    },
    "peerDependencies": {
        "react": "^16.13.1"
    },
    "devDependencies": {
        "babel-eslint": "^10.1.0",
        "cross-env": "^7.0.2",
        "eslint": "^7.4.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-config-standard-react": "^9.2.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-no-unsanitized": "^3.1.2",
        "eslint-plugin-no-wildcard-postmessage": "^0.2.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-prototype-pollution-security-rules": "^1.0.6",
        "eslint-plugin-react": "^7.20.3",
        "eslint-plugin-scanjs-rules": "^0.2.1",
        "eslint-plugin-security": "^1.4.0",
        "eslint-plugin-standard": "^4.0.1",
        "prettier": "^2.0.5",
        "gh-pages": "^3.1.0",
        "microbundle-crl": "^0.13.11",
        "npm-run-all": "^4.1.5",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-scripts": "^3.4.1"
    },
    "files": [
        "dist"
    ],
    "browserslist": [
        "defaults",
        "not IE 11",
        "not IE_Mob 11",
        "maintained node versions"
    ],
    "dependencies": {
        "@paytheory/payment-components": "0.0.4-0"
    }
}
